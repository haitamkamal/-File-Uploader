generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["typedSql"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  name     String
  email    String   @unique
  password String?
  role     Role     @default(USER)
  Post     Post[]
  profile  profile?
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  image     String?
  authorId  Int
  createdAt DateTime @default(now())
  author    User     @relation(fields: [authorId], references: [id])
}

model profile {
  id     Int     @id @default(autoincrement())
  bio    String
  image  String?
  user   User    @relation(fields: [userId], references: [id])
  userId Int     @unique
}

model Session {
  id        String   @id @default(uuid())
  sid       String   @unique
  data      String
  expiresAt DateTime
}

enum Role {
  USER
  ADMIN
}
